<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterVendor"
    >

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="413dp"
        android:layout_height="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vendorHeader"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:text="Vendor Registration"
            android:textAlignment="center"
            android:textColor="#2CBDBC"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="418dp"
        android:layout_height="170dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/logo"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="425dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/userNameRes"
            android:layout_width="409dp"
            android:layout_height="49dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="402dp" />

        <EditText
            android:id="@+id/resName"
            android:layout_width="400dp"
            android:layout_height="49dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Restaurant Name"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="402dp" />


        <EditText
            android:id="@+id/resPassword"
            android:layout_width="400dp"
            android:layout_height="49dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="402dp" />

        <EditText
            android:id="@+id/resConfirmPassword"
            android:layout_width="400dp"
            android:layout_height="49dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="text"
            android:paddingBottom="20dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="402dp" />

        <TextView
            android:id="@+id/alreadyAVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:text="Already a Vendor, click here to login"
            android:textAlignment="center"
            android:textColor="#2CBDBC"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/registerAsVendorButton"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#028080"
            android:text="Sign Up as Vendor"
            android:textSize="18sp"
            app:cornerRadius="30dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>